@model Referees
@{
    ViewData["Title"] = "AddReferees";
}

<h3>Please enter your referees</h3>

<form method="post">
    <input asp-for="Id" hidden />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col pb-2">
            <input type="text" asp-for="Name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="JobTitle" class="col-sm-2 col-form-label">Job Title</label>
        <div class="col pb-2">
            <input type="text" asp-for="JobTitle" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Insitution" class="col-sm-2 col-form-label">Insitution</label>
        <div class="col pb-2">
            <input type="text" asp-for="Insitution" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Cell" class="col-sm-2 col-form-label">Cell</label>
        <div class="col pb-2">
            <input type="tel" asp-for="Cell" pattern="[0][0-9]{9}" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col pb-2">
            <input type="email" asp-for="Email" />
        </div>
    </div>


    <button type="submit" class="btn btn-success" asp-action="AddReferees" style="width:150px"><i class="bi bi-save"></i></button>
</form>